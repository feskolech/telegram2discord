# Токен Telegram бота
TELEGRAM_BOT_TOKEN=

# Токен Discord бота
DISCORD_BOT_TOKEN=

# Один канал (по умолчанию)
TELEGRAM_SOURCE_CHANNEL_ID=
DISCORD_TARGET_CHANNEL_ID=

# Необязательный username канала для футера (для публичных каналов)
TELEGRAM_SOURCE_CHANNEL_USERNAME=

# Или несколько каналов (перекрывает две переменные выше)
# CHANNEL_MAP=-1001234567890:123456789012345678,-1002345678901:234567890123456789

# Необязательные username для футера при нескольких каналах
# CHANNEL_USERNAME_MAP=-1001234567890:testchannel,-1002345678901:otherchannel

# Разрешённые Telegram IDs (пока не используется)
ALLOWED_ADMIN_IDS=

# Уровень логов: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Паузы ретраев в секундах (фиксированные попытки)
# Пример: 5 попыток -> 2с,4с,8с,16с,32с
RETRY_DELAYS=2,4,8,16,32

# Использовать Discord embeds для текста (цветная полоса слева)
USE_EMBEDS=1
# Цвет embed (hex или decimal), например 0x5865F2 или #5865F2
EMBED_COLOR=0x5865F2
